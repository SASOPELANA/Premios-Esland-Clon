---
// Importamos los componentes
import Header from "../components/Header.astro";

// Archivo de importacion de tailwind css
import "../styles/global.css";

// Interface de Astro
interface Props {
  title?: string;
  icons?: string;
  description?: string;
}

// Creamos una constante que recibe las props
const { title, description } = Astro.props;
const { icons } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
