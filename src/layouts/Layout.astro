---
// Importamos los componentes
import Header from "../components/Header.astro";

// Archivo de importacion de tailwind css
import "../styles/global.css";

// Interface de Astro
interface Props {
  title?: string;
  icons?: string;
  description?: string;
}

// Creamos una constante que recibe las props
const { title, description } = Astro.props;
const { icons = "../../public/Icons/logo-esland.png" } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content={description} />
    <link rel="icon" type="image/png" href={icons} />
    <meta name="generator" />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <slot />
  </body>
</html>

<style is:global>
  :root {
    color-scheme: dark;
  }

  html {
    font-family: system-ui, sans-serif;
    background: #111e31;
  }
</style>
